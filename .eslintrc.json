{
  "plugins": [
    "prettier"
  ],
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "mocha": true
  },
  "globals": {
    "Vue": true,
    "Vuex": true,
    "mapState": true,
    "mapGetters": true,
    "mapMutations": true,
    "mapActions": true,
    "store": true,
    "Clipboard": true,
    "Util": true
  },
  "rules": {
    "no-new": "off",
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-console": "off"
  }
}